{
  "name": "devContainerBds",
  "image": "ghcr.io/the-bds-maneger/devcontainer_nodejs",
  "remoteUser": "devcontainer",
  "containerUser": "devcontainer",
  "updateRemoteUserUID": false,
  "postCreateCommand": "startDocker npm install",
  "runArgs": [
    "--init",
    "--privileged"
  ],
  "mounts": [
    "type=tmpfs,destination=/var/lib/docker"
  ],
  "extensions": [
    "GitHub.copilot-nightly",
    "GitHub.copilot-labs",
    "benshabatnoam.google-translate-ext",
    "eamodio.gitlens",
    "github.vscode-pull-request-github",
    "visualstudioexptteam.vscodeintellicode",
    "redhat.vscode-yaml",
    "ms-vscode-remote.remote-containers",
    "wix.vscode-import-cost",
    "eg2.vscode-npm-script",
    "christian-kohler.npm-intellisense",
    "christian-kohler.path-intellisense",
    "aaron-bond.better-comments",
    "vscode-icons-team.vscode-icons",
    "me-dutour-mathieu.vscode-github-actions",
    "cschleiden.vscode-github-actions",
    "oderwat.indent-rainbow",
    "ms-azuretools.vscode-docker"
  ]
}
